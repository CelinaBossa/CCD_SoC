{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run Icarus Verilog",
        "type": "shell",
        "command": "iverilog",
        "args": [
          "-o",
          "output",
          "${file}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      },
      {
        "label": "Run Simulation",
        "type": "shell",
        "command": "vvp",
        "args": [
          "output"
        ],
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      },
      {
        "label": "View Waveform",
        "type": "shell",
        "command": "gtkwave",
        "args": [
          "dump.vcd"
        ],
        "group": {
          "kind": "test",
          "isDefault": false
        }
      }
    ]
  }
  